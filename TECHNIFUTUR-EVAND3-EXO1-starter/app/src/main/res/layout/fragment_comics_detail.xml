<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details.ComicsDetailFragment"
    android:background="@color/black">

    <ImageView
        android:id="@+id/comic_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/comic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comic_image"
        android:background="@color/marvelRed"
        android:padding="10dp"
        android:text="HULK"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/comic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" test test test test test"
        app:layout_constraintTop_toBottomOf="@id/comic_name"
        android:textColor="@color/white"
        android:textSize="15sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>